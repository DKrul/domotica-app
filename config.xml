<?xml version='1.0' encoding='utf-8'?>
<widget id="nl.tigrou.domotica.app" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Domotica App Sonke</name>
    <description>A custom domotica app for at home.</description>
    <author email="rob@tigrou.nl" href="http://www.tigrou.nl/">Rob Sonke</author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
      <allow-intent href="market:*" />
      <icon gap:platform="android" gap:qualifier="ldpi" src="resources/res/icons/android/icon-36-ldpi.png"/>
      <icon gap:platform="android" gap:qualifier="mdpi" src="resources/res/icons/android/icon-48-mdpi.png"/>
      <icon gap:platform="android" gap:qualifier="hdpi" src="resources/res/icons/android/icon-72-hdpi.png"/>
      <icon gap:platform="android" gap:qualifier="xhdpi" src="resources/res/icons/android/icon-96-xhdpi.png"/>
      <icon gap:platform="android" gap:qualifier="xxhdpi" src="resources/res/icons/android/icon-144-xxhdpi.png"/>
      <icon gap:platform="android" gap:qualifier="xxxhdpi" src="resources/res/icons/android/icon-192-xxxhdpi.png"/>

      <gap:splash gap:platform="android" gap:qualifier="ldpi" src="resources/res/screens/android/screen-ldpi-portrait.png" />
      <gap:splash gap:platform="android" gap:qualifier="mdpi" src="resources/res/screens/android/screen-mdpi-portrait.png" />
      <gap:splash gap:platform="android" gap:qualifier="hdpi" src="resources/res/screens/android/screen-hdpi-portrait.png" />
      <gap:splash gap:platform="android" gap:qualifier="xhdpi" src="resources/res/screens/android/screen-xhdpi-portrait.png" />
    </platform>
    <platform name="ios">
      <allow-intent href="itms:*" />
      <allow-intent href="itms-apps:*" />
      <icon gap:platform="ios" src="resources/resources/res/icons/ios/icon-small.png" width="29" height="29" />
      <icon gap:platform="ios" src="resources/res/icons/ios/icon-small-2x.png" width="58" height="58" />
      <icon gap:platform="ios" src="resources/res/icons/ios/icon-40.png" width="40" height="40" />
      <icon gap:platform="ios" src="resources/res/icons/ios/icon-40-2x.png" width="80" height="80" />
      <icon gap:platform="ios" src="resources/res/icons/ios/icon-50.png" width="50" height="50" />
      <icon gap:platform="ios" src="resources/res/icons/ios/icon-50-2x.png" width="100" height="100" />
      <icon gap:platform="ios" src="resources/res/icons/ios/icon.png" width="57" height="57" />
      <icon gap:platform="ios" src="resources/res/icons/ios/icon-2x.png" width="114" height="114" />
      <icon gap:platform="ios" src="resources/res/icons/ios/icon-60.png" width="60" height="60" />
      <icon gap:platform="ios" src="resources/res/icons/ios/icon-60-2x.png" width="120" height="120" />
      <icon gap:platform="ios" src="resources/res/icons/ios/icon-60-3x.png" width="180" height="180" />
      <icon gap:platform="ios" src="resources/res/icons/ios/icon-72.png" width="72" height="72" />
      <icon gap:platform="ios" src="resources/res/icons/ios/icon-72-2x.png" width="144" height="144" />
      <icon gap:platform="ios" src="resources/res/icons/ios/icon-76.png" width="76" height="76" />
      <icon gap:platform="ios" src="resources/res/icons/ios/icon-76-2x.png" width="152" height="152" />

      <gap:splash gap:platform="ios" src="resources/res/screens/ios/Default-Portrait~iphone.png" width="320" height="480" />
      <gap:splash gap:platform="ios" src="resources/res/screens/ios/Default-Portrait@2x~iphone.png" width="640" height="960" />
      <gap:splash gap:platform="ios" src="resources/res/screens/ios/screen-iphone-portrait-568h-2x.png" width="640" height="1136" />
      <gap:splash gap:platform="ios" src="resources/res/screens/ios/screen-iphone-portrait-667h.png" width="750" height="1334" />
      <gap:splash gap:platform="ios" src="resources/res/screens/ios/Default-Portrait-736h@3x.png" width="1242" height="2208" />
      <gap:splash gap:platform="ios" src="resources/res/screens/ios/screen-ipad-portrait.png" width="768" height="1024" />
      <gap:splash gap:platform="ios" src="resources/res/screens/ios/Default@2x~iphone.png.png" width="1536" height="2048" />
      <!-- <gap:splash gap:platform="ios" src="images/Default-568h@2x.png"  width="640" height="1136" /> -->

    </platform>
    <preference name="webviewbounce" value="false" />
    <preference name="UIWebViewBounce" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="16" />
    <preference name="BackupWebStorage" value="none" />
    <feature name="StatusBar">
      <param name="ios-package" onload="true" value="CDVStatusBar" />
    </feature>
    <plugin name="cordova-plugin-device" spec="~1.1.1" />
    <plugin name="cordova-plugin-console" spec="~1.0.2" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.1" />
    <plugin name="cordova-plugin-splashscreen" spec="~3.2.1" />
    <plugin name="cordova-plugin-statusbar" spec="~2.1.2" />
    <plugin name="ionic-plugin-keyboard" spec="~2.0.1" />
</widget>
